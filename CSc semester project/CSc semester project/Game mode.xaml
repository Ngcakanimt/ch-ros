<Window x:Name="GameMode" x:Class="CSc_semester_project.Game_mode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CSc_semester_project"
        mc:Ignorable="d"
        Title="Game_mode" Height="450" Width="800">
    <Grid Margin="0,0,-8,0" HorizontalAlignment="Left" Width="800">
        <Image x:Name="main_menu_background_gif" Margin="0,0,10,182" Source="main_menu background.gif" Stretch="Fill"/>

        <Button x:Name="Dodge" Content="Dodge" HorizontalAlignment="Left" Margin="48,267,0,0" VerticalAlignment="Top" Width="125" Height="58" Click="Dodge_Click"/>
        <Button x:Name="Shoot" Content="Shoot" HorizontalAlignment="Left" VerticalAlignment="Top" Width="111" Margin="642,267,0,0" Height="58" Click="Shoot_Click"/>
        <Button x:Name="Return" Content="Return" HorizontalAlignment="Left" Margin="357,338,0,0" VerticalAlignment="Top" Width="122" Height="46" Click="Return_Click"/>

    </Grid>
</Window>
